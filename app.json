{
    "expo": {
        "name": "zoop",
        "slug": "zoop",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/zoop-trans-logo.png",
        "scheme": "zoop",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "googleServicesFile": "./GoogleService-Info.plist",
            "supportsTablet": true,
            "bundleIdentifier": "com.sherhxtr.zoop"
        },
        "android": {
            "googleServicesFile": "./google-services.json",
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/zoop-trans-logo.png",
                "backgroundColor": "#fff"
            },
            "edgeToEdgeEnabled": true,
            "package": "com.sherhxtr.zoop"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/zoop-trans-logo.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#fff"
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}
