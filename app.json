{
    "expo": {
        "name": "zoop",
        "slug": "zoop",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/zoop-trans-logo.png",
        "scheme": "zoop",
        "userInterfaceStyle": "automatic",
        "newArchEnabled": true,
        "ios": {
            "googleServicesFile": "./GoogleService-Info.plist",
            "supportsTablet": true,
            "bundleIdentifier": "com.sherhxtr.zoop"
        },
        "android": {
            "googleServicesFile": "./google-services.json",
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/zoop-trans-logo.png",
                "backgroundColor": "#fff"
            },
            "softwareKeyboardLayoutMode": "pan",
            "edgeToEdgeEnabled": true,
            "package": "com.sherhxtr.zoop"
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            [
                "expo-splash-screen",
                {
                    "image": "./assets/images/zoop-trans-logo.png",
                    "imageWidth": 200,
                    "resizeMode": "contain",
                    "backgroundColor": "#fff"
                }
            ],
            [
                "expo-image-picker",
                {
                    "photosPermission": "The app accesses your photos to let you share them with your friends."
                }
            ],
            [
                "expo-audio",
                {
                    "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
                }
            ],
            [
                "expo-video",
                {
                    "supportsBackgroundPlayback": true,
                    "supportsPictureInPicture": true
                }
            ],
            [
                "expo-av",
                {
                    "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone."
                }
            ],
            [
                "expo-build-properties",
                {
                    "android": {
                        "ndkVersion": "27.0.12077973"
                    }
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}
